{
  "manifest_version": 3,
  "name": "Tweet Cards for ChatGPT",
  "version": "3.0",
  "description": "Shows relevant tweet cards while ChatGPT is thinking.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
      "host_permissions": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*",
        "https://real-time-news-data.p.rapidapi.com/*",
        "https://youtube-video-and-shorts-downloader.p.rapidapi.com/*"
      ],
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}


