{
  "manifest_version": 3,
  "name": "ShortsGPT",
  "version": "1.0",
  "description": "Displays short YouTube videos generated by GPT inside ChatGPT.",
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}


